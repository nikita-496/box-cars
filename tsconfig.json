{
  "extends": "./tsconfig-checks.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "types": ["node", "vite/client"],
    "target": "ES2020",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src", "./globals.d.ts"],
  "exclude": ["node_modules"]
}
